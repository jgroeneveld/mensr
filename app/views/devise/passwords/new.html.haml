= link_to t('back'), :back, class: "nav_button"

.content
  %h2= t('user.forgotten_password')
  - form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    %fieldset
      .field
        = f.label :email
        = f.text_field :email
    .actions= f.submit t('user.send_password_reset_instructions')
  = render :partial => "devise/shared/links"